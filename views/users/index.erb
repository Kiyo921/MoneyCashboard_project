
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="tabbable" id="tabs-839710">  
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
            <h3>Filter</h3>
              <form action="/users/filter_by_date" method="get">
                From:<input type="date" name="start_date">
                To:<input type="date" name="end_date">
                <input type="submit" value="Sort by time" class="btn btn-primary">
              </form>
              <form action="/users/filter_by_category" method="get">
                <select name="category_id">
                  <% @categories.each do |category| %>
                  <% if @category_id == category.id %>
                  <option value="<%=category.id%>" selected="selected"><%=category.category_name %></option>
                  <% else  %>
                  <option value="<%=category.id%>"><%=category.category_name %></option>
                  <% end %>
                  <% end %>
                </select>
                <input type="submit" value="By Category" class="btn btn-primary">
              </form>
              <form action="/users/filter_by_merchant" method="get">
                <select name="merchant_id">
                  <% @merchants.each do |merchant| %>
                    <% if @merchant_id == merchant.id %>
                    <option value="<%=merchant.id%>" selected="selected"><%=merchant.merchant_name %></option>
                    <% else  %>
                    <option value="<%=merchant.id%>"><%=merchant.merchant_name %></option>
                    <% end %>
                  <% end %>
                </select>
                <input type="submit" value="By Store" class="btn btn-primary">
              </form>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>
                      Date
                    </th>
                    <th>
                      Amount
                    </th>
                    <th>
                      Category
                    </th>
                    <th>
                      Store
                    </th>
                    <th>
                      Memo
                    </th>
                  </tr>
                </thead>
                <% @transactions.each do |transaction| %> 
                <tbody>
                  <tr>
                    <td>
                      <%= transaction.dates %>
                    </td>
                    <td>
                      £<%= transaction.amount %>
                    </td>
                    <td>
                      <%= transaction.category.category_name  %>
                    </td>
                    <td>
                      <%= transaction.merchant.merchant_name  %>
                    </td>
                    <td>
                      <%= transaction.memo %>
                    </td>
                    <td>
                      <a href="/transactions/<%= transaction.id %>/edit">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                    </td>
                    <td>
                      <form method="post" action="/transactions/<%= transaction.id %>/delete" onsubmit="return confirm('Are you sure you want to delete this?')">
                        <input class="btn" type="submit" value="Delete">
                        </input>   
                      </form>
                    </td>  
                  </tr>
                </tbody>
                <% end %>
              </table>
              <h4>Total expenditure: £<%= @analysis.total() %></h4> 
            </div>
          </div>
        </div> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
