<div class="container-fluid website_image">
  <div class="row">
    <div class="col-md-6">
        <% if current_user == nil%>
        <h2 class="title1">Welcome to Money Cashboard!</h2>
        <% else %>
        <h2 class="title1">Welcome, <%=@user.name%>!</h2>
        <% end %>
        <img class="stock_market_logo" src="http://mcxcapitalviatips.com/wp-content/uploads/2014/08/chart_iconcopy.jpg" alt="stock market">
        <p class="lead">Money Dashboard is a personal financial assistant that shows you exactly where money goes and helps you make better decisions.</p>
          
          <div class="container-fluid signup_form">
            <div class="row">
              <div class="col-md-6">
                <form role="form" action="/registrations" method="post">
                  <div class="form-group">
                     
                    <label for="name">
                      Name
                    </label>
                    <input type="text" class="form-control" id="exampleInputText" name="name">
                  </div>
                  <div class="form-group">
                     
                    <label for="exampleInputEmail1 email">
                      Email
                    </label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="email">
                  </div>
                  <div class="form-group">
                     
                    <label for="exampleInputPassword1 password">
                      Password
                    </label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                  </div>
                  <button type="submit" class="btn btn-default">
                    Sign up!
                  </button>
                </form>
              </div>
          <a href="/sessions/login">Log In</a>
    </div>
    <div class="col-md-6">
    </div>
  </div>
</div>